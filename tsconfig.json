{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@express-rate-limit/tsconfig": ["./node_modules/express-rate-limit/tsconfig.json"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "node_modules/express-rate-limit/source/**/*",
    "node_modules/zod/v4/locales/*",
    "src/docs/swagger.ts"
  ]
}
